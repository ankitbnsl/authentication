<html lang="en">
<head>
   
    <title>Document</title>

    <%- style %> 
    <style>
        .flash-message{
            color: black;
            background-color: white;
            width: 20%;
            margin-left: 75%;
            border: 1px solid black;
            font-size: 20px;
            font-weight: 600;
            text-align: center;
            margin-top: 0px;
            padding: 5px;
            position: absolute;
        }
    </style>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>

  <% if(flash.success && flash.success.length >0){ %>
    <div class="flash-message">  <%= flash.success  %>  </div>
   <% } %>
   <% if(flash.error && flash.error.length >0){ %>
    <div class="flash-message">  <%= flash.error  %>  </div> 
   <% } %>   

    <%- body  %>
    

<script>

$(document).ready(function() {
  $('.flash-message').fadeOut(5000); // 5 seconds x 1000 milisec = 5000 milisec
});
</script>
</body>
</html>